{
  "version": 2,
  "builds": [
    {
      "src": "xianwen/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "xianwen/dist"
      }
    },
    {
      "src": "server/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/xianwen/dist/index.html"
    }
  ]
} 